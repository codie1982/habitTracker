            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

               <ImageButton
                   android:layout_width="60dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/baseline_chevron_right_24"
                   />
            </LinearLayout>
        </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_habit_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeIntervalFeatures"
        tools:listitem="@layout/rc_habit_item" />

    <com.grnt.habbittrackertest01.feature.TimeIntervals.TimeIntevalFeature
        android:id="@+id/timeIntervalFeatures"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/rc_habit_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lnrCalenderSection" />
